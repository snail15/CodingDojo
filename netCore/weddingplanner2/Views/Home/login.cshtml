<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
         @{
        if(ViewBag.Errors != null){
            foreach(var error in ViewBag.Errors){
                <p>@error</p>
            }
        }
    }
        <form action="login" method="POST">
            <div class="form-group">
                <label for="Email">Email</label>
                <input name="Email" aria-describedby="userHelp" type="text" class="form-control" id="Email" placeholder="Email">
            </div>
             <div class="form-group">
                <label for="Password">Password</label>
                <input name="Password" aria-describedby="PasswordHelp" class="form-control" id="Password" type="password">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>