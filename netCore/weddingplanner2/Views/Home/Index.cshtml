@{
    ViewData["Title"] = "Wedding Planner";
}
@model weddingplanner2.Models.UserViewModel
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <form action="" method="POST">
            <div class="form-group">
                <label for="restaurant">Name</label>
                <input asp-for="Name" name="Name" type="text" aria-describedby="nameHelp" class="form-control" id="restaurant" placeholder="Your Name">
                <small id="nameHelp" class="form-text text-muted"><span asp-validation-for="Name"></span></small>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input asp-for="Email" name="Email" aria-describedby="userHelp" type="text" class="form-control" id="Email" placeholder="Email">
                <small id="userHelp" class="form-text text-muted"><span asp-validation-for="Email"></span></small>
            </div>
             <div class="form-group">
                <label for="Password">Password</label>
                <input asp-for="Password" name="Password" aria-describedby="PasswordHelp" class="form-control" id="Password" type="password">
                <small id="PasswordHelp" class="form-text text-muted"><span asp-validation-for="Password"></span></small>
            </div>
             <div class="form-group">
                <label for="Confirm">Confirm Password</label>
                <input asp-for="Confirm" name="Confirm" aria-describedby="ConfirmHelp" class="form-control" id="Confirm" type="password">
                <small id="ConfirmHelp" class="form-text text-muted"><span asp-validation-for="Confirm"></span></small>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
       <a asp-controller="Home" asp-action="Login">Already Registered?</a>
    </div>
    <div class="col-sm-3"></div>
</div>