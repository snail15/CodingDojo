@{
    ViewData["Title"] = "Sungin's Auction!";
}
@model auction.Models.UserModelView
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <h2>Welcome! Please Register</h2>
        <form asp-controller="Home" asp-action="Index" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input asp-for="Username" name="Username" type="text" aria-describedby="nameHelp" class="form-control" id="username" placeholder="e.g. givemeblack">
                <small id="nameHelp" class="form-text text-muted"><span asp-validation-for="Username"></span></small>
            </div>
            <div class="form-group">
                <label for="firstname">First Name</label>
                <input asp-for="FirstName" name="FirstName" aria-describedby="userHelp" type="text" class="form-control" id="firstname" placeholder="Jon">
                <small id="userHelp" class="form-text text-muted"><span asp-validation-for="FirstName"></span></small>
            </div>
             <div class="form-group">
                <label for="lastname">Last Name</label>
                <input asp-for="LastName" name="LastName" aria-describedby="PasswordHelp" class="form-control" id="Password" type="text" placeholder="Snow">
                <small id="PasswordHelp" class="form-text text-muted"><span asp-validation-for="LastName"></span></small>
            </div>
             <div class="form-group">
                <label for="password">Password</label>
                <input asp-for="Password" name="Password" aria-describedby="passwordHelp" class="form-control" id="password" type="password">
                <small id="passwordHelp" class="form-text text-muted"><span asp-validation-for="Password"></span></small>
            </div>
             <div class="form-group">
                <label for="Confirm">Confirm Password</label>
                <input asp-for="Confirm" name="Confirm" aria-describedby="ConfirmHelp" class="form-control" id="Confirm" type="password">
                <small id="ConfirmHelp" class="form-text text-muted"><span asp-validation-for="Confirm"></span></small>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
       <a asp-controller="Home" asp-action="Login">Already Registered?</a>
    </div>
    <div class="col-sm-1"></div>
</div>